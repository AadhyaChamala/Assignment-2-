<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

<!-- Form for editing an existing certification -->
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Certificate Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Certificate Title"
                    name="name" 
                    value="<%= Certifications.name %>"
                    required>
                </div>
<!-- Input field for company name with pre-filled value -->
                <div class="form-group">
                    <label for="companyTextField">company</label>
                    <input type="text" class="form-control"
                    id="companyTextField"
                    placeholder="Enter the company's name"
                    name="company" 
                    value="<%= Certifications.company %>"
                    required>
                </div>
<!-- Input field for the year of completion with pre-filled value -->
                <div class="form-group">
                    <label for="date_of_issueTextField">date_of_issue</label>
                    <input type="text" class="form-control"
                    id="date_of_issueTextField"
                    placeholder="Enter the Year of completion"
                    name="date_of_issue" 
                    value="<%= Certifications.date_of_issue %>"
                    required>
                </div>
<!-- Textarea for a brief description of the certificate with pre-filled value -->
                <div class="form-group">
                    <label for="descriptionTextArea">description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter a brief description of the certificate"
                    name="description"
                    value = "<%= Certifications.description %>" 
                    required> 
                    
                                      
                    </textarea>
                </div>

                
<!-- Submit button for the form -->
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
         
                <!-- Cancel button redirecting to the certification list page -->
                    <a href="/certifications-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>